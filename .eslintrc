{
	"extends": [
		"airbnb",
		"plugin:flowtype/recommended",
		"plugin:security/recommended",
		"plugin:no-unsanitized/DOM"
	],
	"parser": "babel-eslint",
	"env": {
		"node": true,
		"browser": true,
		"jest": true
	},
	"globals": {
		"React": true
	},
	"plugins": ["flowtype", "security", "no-unsanitized"],
	"rules": {
		"eqeqeq": 2,
		"no-extend-native": 2,
		"no-console": 0,
		"no-use-before-define": 2,
		"max-depth": [1, 3],
		"max-params": [1, 4],
		"no-undef": 2,
		"no-var": 2,
		"object-shorthand": [
			"error",
			"always",
			{
				"avoidQuotes": true
			}
		],
		"no-tabs": 0,
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
		"strict": 0,
		"react/jsx-indent": [2, "tab"],
		"react/jsx-indent-props": [2, "tab"],
		"react/jsx-filename-extension": 0,
		"react/no-danger": 0,
		"import/no-unresolved": 0
	}
}
