{
	"name": "personal-website",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"dev": "next",
		"build": "next build",
		"next": "next start",
		"start": "cross-env NODE_ENV=production node server.js",
		"deploy": "now --token $NOW_TOKEN",
		"alias": "now alias --token $NOW_TOKEN",
		"prettier": "prettier-eslint './**/*.js' --write && prettier './**/*.json' './**/*.scss' --write",
		"lint": "vave lint",
		"test": "run-p flow jest",
		"test:coverage": "jest --coverage",
		"codecov": "cat ./coverage/lcov.info | codecov",
		"jest": "jest",
		"flow:start": "flow start",
		"flow": "flow"
	},
	"prettier": {
		"printWidth": 100,
		"useTabs": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"singleQuote": true
	},
	"dependencies": {
		"@mdx-js/mdx": "^0.12.0",
		"@mdx-js/tag": "^0.11.0",
		"@zeit/next-mdx": "^1.1.0",
		"autobind-decorator": "^2.1.0",
		"autoprefixer": "^8.2.0",
		"babel-register": "^6.26.0",
		"body-parser": "^1.18.2",
		"common-tags": "^1.7.2",
		"compression": "^1.7.1",
		"cross-env": "^5.1.4",
		"dotenv": "^5.0.1",
		"email-validator": "^1.1.1",
		"express": "^4.16.3",
		"glob": "^7.1.2",
		"helmet": "^3.12.0",
		"keen-tracking": "^1.4.0",
		"mobile-detect": "^1.4.1",
		"next": "^5.1.0",
		"node-telegram-bot-api": "^0.30.0",
		"node-where": "^1.1.0",
		"postcss-easy-import": "^3.0.0",
		"react": "^16.3.0",
		"react-dom": "^16.3.0",
		"react-highlight": "^0.12.0",
		"react-tweet-embed": "^1.1.0",
		"sw-precache-webpack-plugin": "^0.11.5"
	},
	"devDependencies": {
		"babel-eslint": "^8.2.1",
		"babel-preset-vave": "^0.3.0",
		"codecov": "^3.0.0",
		"enzyme": "^3.3.0",
		"enzyme-adapter-react-16": "^1.1.1",
		"eslint": "^4.15.0",
		"eslint-config-airbnb": "^16.1.0",
		"eslint-config-vave": "^0.4.0",
		"eslint-formatter-pretty": "^1.3.0",
		"eslint-plugin-flowtype": "^2.41.0",
		"eslint-plugin-import": "^2.8.0",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-no-unsanitized": "^2.0.2",
		"eslint-plugin-react": "^7.5.1",
		"eslint-plugin-security": "^1.4.0",
		"flow-bin": "^0.65.0",
		"flow-typed": "^2.2.3",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^22.2.2",
		"node-sass": "^4.7.2",
		"now": "^12.0.0-canary.73",
		"npm-run-all": "^4.1.2",
		"postcss-loader": "^2.0.10",
		"prettier": "^1.10.2",
		"prettier-eslint": "^8.8.1",
		"prettier-eslint-cli": "^4.7.0",
		"raw-loader": "^0.5.1",
		"sass-loader": "^6.0.6"
	},
	"eslintConfig": {
		"extends": "vave",
		"globals": {
			"React": true
		},
		"rules": {
			"react/jsx-filename-extension": "off",
			"react/no-danger": "off",
			"security/detect-object-injection": "off"
		}
	},
	"babel": {
		"env": {
			"development": {
				"presets": [
					"next/babel",
					"vave"
				]
			},
			"production": {
				"presets": [
					"next/babel",
					"vave"
				]
			},
			"test": {
				"presets": [
					[
						"env",
						{
							"modules": "commonjs"
						}
					],
					"next/babel",
					"vave"
				]
			}
		}
	},
	"jest": {
		"setupFiles": [
			"<rootDir>/jest.setup.js"
		],
		"testPathIgnorePatterns": [
			"<rootDir>/.next/",
			"<rootDir>/node_modules/"
		],
		"moduleNameMapper": {
			"\\.(css|scss)$": "identity-obj-proxy"
		}
	}
}
