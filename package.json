{
	"name": "personal-website",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"dev": "next",
		"build": "next build",
		"install": "prettier --write package.json",
		"start": "next start",
		"start-sw": "NODE_ENV=production node server.js",
		"export": "next export",
		"prettier": "prettier './**/*.js' './**/*.json' './**/*.scss' --write",
		"eslint": "eslint './**/*.js' --format=pretty --fix",
		"lint": "vave lint",
		"test": "npm run lint"
	},
	"prettier": {
		"printWidth": 100,
		"useTabs": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"singleQuote": true
	},
	"dependencies": {
		"autobind-decorator": "^2.1.0",
		"body-parser": "^1.18.2",
		"common-tags": "^1.7.2",
		"compression": "^1.7.1",
		"email-validator": "^1.1.1",
		"express": "^4.16.2",
		"next": "^4.2.1",
		"node-telegram-bot-api": "^0.30.0",
		"node-where": "^1.1.0",
		"react": "^16.2.0",
		"react-dom": "^16.2.0"
	},
	"devDependencies": {
		"autoprefixer": "^7.2.4",
		"babel-eslint": "^8.2.1",
		"babel-preset-vave": "^0.3.0",
		"eslint": "^4.15.0",
		"eslint-config-airbnb": "^16.1.0",
		"eslint-config-vave": "^0.4.0",
		"eslint-formatter-pretty": "^1.3.0",
		"eslint-plugin-flowtype": "^2.41.0",
		"eslint-plugin-import": "^2.8.0",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-no-unsanitized": "^2.0.2",
		"eslint-plugin-react": "^7.5.1",
		"eslint-plugin-security": "^1.4.0",
		"flow-bin": "^0.63.1",
		"flow-typed": "^2.2.3",
		"glob": "^7.1.2",
		"jest": "^22.0.4",
		"node-sass": "^4.7.2",
		"npm-run-all": "^4.1.2",
		"postcss-easy-import": "^3.0.0",
		"postcss-loader": "^2.0.10",
		"prettier": "^1.9.2",
		"raw-loader": "^0.5.1",
		"sass-loader": "^6.0.6",
		"sw-precache-webpack-plugin": "^0.11.4",
		"vave": "^0.5.0"
	},
	"eslintConfig": {
		"extends": "vave",
		"globals": {
			"React": true
		},
		"rules": {
			"react/jsx-filename-extension": "off",
			"react/no-danger": "off",
			"security/detect-object-injection": "off"
		}
	},
	"babel": {
		"presets": ["vave", "next/babel"]
	}
}
